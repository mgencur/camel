<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns="http://www.jboss.org/arquillian-1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://www.jboss.org/arquillian-1.0 http://jboss.org/schema/arquillian/arquillian-1.0.xsd">

    <engine>
        <property name="deploymentExportPath">target/</property>
    </engine>

    <group qualifier="EAP">
        <container qualifier="eap" default="true">
            <configuration>
                <property name="jbossHome">${eap.home}</property>
                <property name="managementPort">10099</property>
                <property name="username">${test.username}</property>
                <property name="password">${test.password}</property>
                <property name="javaVmArguments">${server.jvm.args} -Djboss.socket.binding.port-offset=100 -Djboss.node.name=node0 -Dinfinispan.accurate.bulk.ops=true
                </property>
            </configuration>
        </container>
        <!-- JDG server for client-server tests is started via jboss-as maven plugin where
             two additional caches are created via CLI -->
    </group>

</arquillian>
